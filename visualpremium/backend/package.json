{
  "name": "backend",
  "version": "1.0.0",
  "description": "API backend com Express e Prisma",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "cross-env NODE_ENV=dev nodemon src/server.js",
    "prod": "cross-env NODE_ENV=prod node src/server.js",

    "prisma:generate": "prisma generate",

    "migrate:dev": "cross-env NODE_ENV=dev DATABASE_URL=postgresql://postgres:1234@localhost:5432/visualpremium_dev prisma migrate dev",
    "migrate:prod": "cross-env NODE_ENV=prod DATABASE_URL=postgresql://postgres:1234@localhost:5432/visualpremium_prod prisma migrate deploy",

    "reset:dev": "cross-env NODE_ENV=dev DATABASE_URL=postgresql://postgres:1234@localhost:5432/visualpremium_dev prisma migrate reset --force",
    "reset:prod": "cross-env NODE_ENV=prod DATABASE_URL=postgresql://postgres:1234@localhost:5432/visualpremium_prod prisma migrate reset --force",

    "seed:dev": "cross-env NODE_ENV=dev DATABASE_URL=postgresql://postgres:1234@localhost:5432/visualpremium_dev prisma db seed",
    "seed:prod": "cross-env NODE_ENV=prod DATABASE_URL=postgresql://postgres:1234@localhost:5432/visualpremium_prod prisma db seed",
    
    "studio:dev": "cross-env DATABASE_URL=postgresql://postgres:1234@localhost:5432/visualpremium_dev prisma studio",
    "studio:prod": "cross-env DATABASE_URL=postgresql://postgres:1234@localhost:5432/visualpremium_prod prisma studio",
    
    "pull:dev": "cross-env NODE_ENV=dev DATABASE_URL=postgresql://postgres:1234@localhost:5432/visualpremium_dev prisma db pull",
    "pull:prod": "cross-env NODE_ENV=prod DATABASE_URL=postgresql://postgres:1234@localhost:5432/visualpremium_prod prisma db pull"
  
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "pdfkit": "^0.17.2",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "cross-env": "^10.1.0",
    "nodemon": "^3.1.0",
    "prisma": "^7.3.0",
    "dotenv-cli": "^7.4.2"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
